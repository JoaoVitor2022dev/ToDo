<h1>Editando a tarefa: {{task.title}} </h1>
<form action="/tasks/edit" method="POST">
  <input type="hidden" name="id" value="{{task.id}}"> 
  <div class="form-control">
     <label for="title">Título:</label>
     <input type="text" name="title" placeholder="o que voce vai fazer ?" value={{task.title}}>
  </div>
    <div class="form-control">
     <label for="description">Título:</label>
     <input type="description" name="description" placeholder=" Descreva a tarefa... " value={{task.description}}>
  </div>
  <input type="submit" value="Editar">
</form>

